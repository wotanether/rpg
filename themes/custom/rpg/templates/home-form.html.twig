<div id="new-game-confirm" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <h2 id="modalTitle">Are you sure???</h2>
    <p>All you previous datas will be lost...forever</p>
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    <button type="submit" class="button round" id="new-game-confirm-btn">Confirm</button>
</div>

<h2 class="home-form-title">Welcome</br>I don't have a title yet...</h2>

{%if form.continue %}
    <div class="row">
        <div class="small-6 large-6 large-offset-3 small-offset-3 columns">
            {{ form.new_game }}
        </div>
    </div>
    <div class="row">
        <div class="small-6 large-6 large-offset-3 small-offset-3 columns">
            {{ form.continue }}
        </div>
    </div>
{% else %}
    <div class="row">
        <div class="small-6 large-6 large-offset-3 small-offset-3 columns">
            {{ form.new_game_first }}
        </div>
    </div>
{% endif %}

{{ form|without('new_game_first', 'new_game', 'continue') }}
